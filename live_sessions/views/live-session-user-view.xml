<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_course_kanban" model="ir.ui.view">
        <field name="name">Course Kanban View</field>
        <field name="model">live.session.info</field>
        <field name="arch" type="xml">
            <kanban>
                <templates>
                    <t t-name="kanban-box">
                        <div class="o_kanban_record_has_image_fill">
                            <div class="o_kanban_image">
                                <field name="img" widget="image"/>
                            </div>
                            <div class="oe_kanban_details">
                                <div class="o_kanban_title">
                                    <field name="lesson_name"/>
                                </div>
                                <div class="o_kanban_description">
                                    <field name="lesson_description"/>
                                </div>
                                <div>
                                 <button type="object" name="action_view_teacher" class="btn btn-primary">
                                        See Info
                                    </button>
                                    
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="test_action1" model="ir.actions.act_window">
        <field name="name">Add Live Session</field>
        <field name="res_model">live.session.info</field>
        <field name="view_mode">kanban</field>
    </record> 

